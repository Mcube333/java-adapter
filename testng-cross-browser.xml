<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Suite"
       parallel="tests"
       thread-count="2">

    <listeners>
        <listener class-name="tests.listeners.ExtentTestListener"/>
        <listener class-name="tests.utils.RetryAnnotationTransformer"/>
    </listeners>

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <packages>
            <package name="tests.web"/>
        </packages>
    </test>

    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <packages>
            <package name="tests.web"/>
        </packages>
    </test>

</suite>
