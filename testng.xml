<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Suite">

    <listeners>
        <listener class-name="tests.listeners.ExtentTestListener"/>
        <listener class-name="tests.utils.RetryAnnotationTransformer"/>
    </listeners>

    <test name="All Tests">
        <groups>
            <run>
                <include name="${groups}"/>
            </run>
        </groups>

        <packages>
            <package name="tests.api"/>
            <package name="tests.web"/>
        </packages>
    </test>

</suite>
